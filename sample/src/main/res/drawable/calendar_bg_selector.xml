<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
  <item app:tsquare_state_range_middle="true">
    <color android:color="@color/calendar_selected_range_bg"/>
  </item>
  <item android:state_selected="true">
    <shape>
      <solid android:color="@color/calendar_selected_day_bg"/>
      <corners android:radius="4dp" />
    </shape>
  </item>
  <item android:state_pressed="true">
    <shape>
      <solid android:color="@color/calendar_selected_day_bg"/>
      <corners android:radius="4dp" />
    </shape>
  </item>
  <item app:tsquare_state_current_month="false">
    <color android:color="@android:color/transparent"/>
  </item>
  <item app:tsquare_state_highlighted="true">
    <color android:color="@color/calendar_highlighted_day_bg"/>
  </item>
  <item app:tsquare_state_today="true">
    <shape>
      <stroke
          android:width="1dp"
          android:color="@color/calendar_selected_day_bg"/>
      <corners android:radius="8dp" />
    </shape>
    <color android:color="@color/calendar_text_active"/>
  </item>
  <item>
    <color android:color="@android:color/transparent"/>
  </item>
</selector>
